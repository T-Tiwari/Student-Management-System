<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>AddDetails</servlet-name>
        <servlet-class>servlets.AddDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>success</servlet-name>
        <servlet-class>servlets.success</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginpage</servlet-name>
        <servlet-class>servlets.loginpage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerpage</servlet-name>
        <servlet-class>servlets.registerpage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDetails</servlet-name>
        <url-pattern>/AddDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>success</servlet-name>
        <url-pattern>/success</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateDetails</servlet-name>
        <servlet-class>servlets.UpdateDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateDetails</servlet-name>
        <url-pattern>/UpdateDetails</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteDetails</servlet-name>
        <servlet-class>servlets.DeleteDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDetails</servlet-name>
        <url-pattern>/DeleteDetails</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReadDetails</servlet-name>
        <servlet-class>servlets.ReadDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadDetails</servlet-name>
        <url-pattern>/ReadDetails</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>MainWelcomepage.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>loginpage</servlet-name>
        <url-pattern>/loginpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerpage</servlet-name>
        <url-pattern>/registerpage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
